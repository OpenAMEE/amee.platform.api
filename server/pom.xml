        <commons-collections.version>3.2.1</commons-collections.version>
        <commons-dbcp.version>1.4</commons-dbcp.version>
        <commons-lang.version>2.6</commons-lang.version>
        <commons-logging.version>1.1.1</commons-logging.version>
        <groovy.version>1.7.10</groovy.version>
        <h2.version>1.3.154</h2.version>
        <hibernate-core.version>3.6.3.Final</hibernate-core.version>
        <hibernate-memcached.version>1.2.2</hibernate-memcached.version>
        <hoptoad-notifier.version>1.8</hoptoad-notifier.version>
        <hsqldb.version>2.0.0</hsqldb.version>
        <http-builder.version>0.5.1</http-builder.version>
        <javax.mail.version>1.4</javax.mail.version>
        <jetty-servlet-api.version>2.5-20110124</jetty-servlet-api.version>
        <jetty.version>6.1.26</jetty.version>
        <jscience.version>4.3.1</jscience.version>
        <junit.version>4.8.2</junit.version>
        <log4j.version>1.2.16</log4j.version>
        <log4jdbc4.version>1.2beta2</log4jdbc4.version>
        <mysql-connector-java.version>5.1.15</mysql-connector-java.version>
        <org-aspectj.version>1.6.10</org-aspectj.version>
        <org-json.version>2.0</org-json.version>
        <quartz.version>1.6.1</quartz.version>
        <restlet.version>1.1.10</restlet.version>
