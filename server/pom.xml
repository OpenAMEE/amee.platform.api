<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Identity. -->
    <groupId>com.amee.platform</groupId>
    <artifactId>amee-platform-api</artifactId>
    <name>AMEE Platform API</name>
    <packaging>pom</packaging>
    <version>${amee-platform-api.version}</version>

    <!-- Properties. -->
    <properties>

        <!-- Internal Versions. -->
        <amee-platform-api.version>3.6.0-DEV</amee-platform-api.version>
        <amee-base.version>1.0.9</amee-base.version>
        <amee-persist.version>1.0.10</amee-persist.version>
        <amee-messaging.version>1.0.8</amee-messaging.version>
        <amee-restlet.version>1.0.13</amee-restlet.version>
        <amee-platform-science.version>1.1.0</amee-platform-science.version>
        <amee-platform-domain.version>2.1.0</amee-platform-domain.version>
        <amee-platform-service.version>2.1.0</amee-platform-service.version>
        <amee-platform-resource.version>1.1.0</amee-platform-resource.version>
        <!-- External Versions. -->
        <!-- Note: These versions were last checked & upgraded on 14/04/2011. -->
        <!-- Note: Keep Restlet, Jetty and servlet-api versions in sync. -->
        <!-- Note: Check Restlet release notes and jetty dependencies. -->
