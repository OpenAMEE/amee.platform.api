    <modelVersion>4.0.0</modelVersion>

    <!-- Identity. -->
    <groupId>com.amee.platform</groupId>
    <artifactId>amee-platform-api</artifactId>
    <name>AMEE Platform API</name>
    <packaging>pom</packaging>
    <version>${amee-platform-api.version}</version>

    <!-- Properties. -->
    <properties>
        <!-- Internal Versions. -->
        <amee-platform-api.version>3.0</amee-platform-api.version>
        <amee-base.version>1.0.4-SNAPSHOT</amee-base.version>
        <amee-persist.version>1.0.6-SNAPSHOT</amee-persist.version>
        <amee-messaging.version>1.0.4-SNAPSHOT</amee-messaging.version>
        <amee-platform-science.version>1.0.9</amee-platform-science.version>
        <amee-platform-domain.version>1.0.6-SNAPSHOT</amee-platform-domain.version>
        <amee-platform-service.version>1.0.8-SNAPSHOT</amee-platform-service.version>
        <amee-platform-resource.version>1.0.8-SNAPSHOT</amee-platform-resource.version>
        <amee-restlet.version>1.0.6-SNAPSHOT</amee-restlet.version>
        <!-- External Versions. -->
        <!-- Note: These versions were last checked & upgraded on 15/04/2010. -->
        <!-- Note: Keep Restlet, Jetty and servlet-api versions in sync. -->
        <!-- Note: Check Restlet release notes and jetty dependencies. -->
        <cglib.version>2.2</cglib.version>
        <commons-cli.version>1.2</commons-cli.version>
        <commons-collections.version>3.2</commons-collections.version>
        <commons-dbcp.version>1.4</commons-dbcp.version>
        <commons-lang.version>2.5</commons-lang.version>
        <commons-logging.version>1.1.1</commons-logging.version>
        <groovy.version>1.7.3</groovy.version>
        <hibernate-core.version>3.5.1-Final</hibernate-core.version>
        <hibernate-memcached.version>1.2.2</hibernate-memcached.version>
        <hsqldb.version>1.8.0.10</hsqldb.version>
        <http-builder.version>0.5.0</http-builder.version>
        <jetty-servlet-api.version>2.5-20081211</jetty-servlet-api.version>
        <jetty.version>6.1.15</jetty.version>
        <jscience.version>4.3.1</jscience.version>
        <junit.version>4.7</junit.version>
        <log4j.version>1.2.15</log4j.version>
        <log4jdbc.version>4-1.2alpha2</log4jdbc.version>
        <mysql-connector-java.version>5.1.10</mysql-connector-java.version>
        <org-aspectj.version>1.6.8</org-aspectj.version>
        <org-json.version>2.0</org-json.version>
        <quartz.version>1.6.1</quartz.version>
        <restlet.version>1.1.10</restlet.version>
        <slf4j.version>1.5.11</slf4j.version>
        <spring.version>3.0.2.RELEASE</spring.version>
        <xml-apis.version>1.3.04</xml-apis.version>
        <!-- Paths. -->
        <amee.home>/var/www/apps/platform-api-local</amee.home>
        <amee.current>${amee.home}/current</amee.current>
        <amee.current.lib>${amee.current}/lib</amee.current.lib>
        <!-- Other. -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>

    <!-- Modules. -->
    <modules>
        <module>engine</module>
        <module>restlet</module>
    </modules>

    <!-- Internal Dependencies. -->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.amee</groupId>
                <artifactId>amee-base</artifactId>
                <version>${amee-base.version}</version>
            </dependency>
            <dependency>
                <groupId>com.amee</groupId>
                <artifactId>amee-persist</artifactId>
                <version>${amee-persist.version}</version>
            </dependency>
            <dependency>
                <groupId>com.amee</groupId>
                <artifactId>amee-restlet</artifactId>
                <version>${amee-restlet.version}</version>
            </dependency>
            <dependency>
                <groupId>com.amee</groupId>
                <artifactId>amee-messaging</artifactId>
                <version>${amee-messaging.version}</version>
            </dependency>
            <dependency>
                <groupId>com.amee.platform</groupId>
                <artifactId>amee-platform-science</artifactId>
                <version>${amee-platform-science.version}</version>
            </dependency>
            <dependency>
                <groupId>com.amee.platform</groupId>
                <artifactId>amee-platform-domain</artifactId>
                <version>${amee-platform-domain.version}</version>
            </dependency>
            <dependency>
                <groupId>com.amee.platform</groupId>
                <artifactId>amee-platform-service</artifactId>
                <version>${amee-platform-service.version}</version>
            </dependency>
            <dependency>
                <groupId>com.amee.platform</groupId>
                <artifactId>amee-platform-resource</artifactId>
                <version>${amee-platform-resource.version}</version>
            </dependency>
            <dependency>
                <groupId>com.amee.platform</groupId>
                <artifactId>amee-platform-api-engine</artifactId>
                <version>${amee-platform-api.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!-- Build Plugins. -->
    <build>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>1.6</source>
                        <target>1.6</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <!-- Copy all dependencies to build directories, ready for Capistrano install. -->
                    <execution>
                        <id>copy-dependencies-other</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeScope>runtime</includeScope>
                            <excludeScope>provided</excludeScope>
                        </configuration>
                    </execution>
                    <!-- This happens in ant copy-amee-libs now -->
                    <!-- Copy all dependencies to local runtime directory, ready for local execution. -->
                    <!--execution>
                        <id>copy-dependencies-other-local</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeScope>runtime</includeScope>
                            <excludeScope>provided</excludeScope>
                            <outputDirectory>${amee.current.lib}</outputDirectory>
                        </configuration>
                    </execution-->
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
            </plugin>

            <!-- Unit tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <parallel>methods</parallel>
                </configuration>
            </plugin>

            <!-- Integration tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <configuration>
                    <environmentVariables>

                        <!-- HSQLDB -->
                        <DB_URL_PREFIX>jdbc</DB_URL_PREFIX>
                        <DB_URL>hsqldb:mem:amee_test</DB_URL>
                        <DB_DRIVER>org.hsqldb.jdbcDriver</DB_DRIVER>
                        <DB_USERNAME>sa</DB_USERNAME>
                        <DB_PSWD>NULL</DB_PSWD>
                        <VALIDATION_QUERY>SELECT 1 FROM INFORMATION_SCHEMA.SYSTEM_USERS</VALIDATION_QUERY>

                        <!-- MySQL -->
                        <!--DB_URL_PREFIX>jdbc:log4jdbc</DB_URL_PREFIX-->
                        <!--DB_URL>mysql://localhost:3306/amee?autoReconnect=true&amp;autoReconnectForPools=true&amp;useCompression=false</DB_URL-->
                        <!--DB_DRIVER>net.sf.log4jdbc.DriverSpy</DB_DRIVER-->
                        <!--DB_USERNAME>amee</DB_USERNAME-->
                        <!--DB_PSWD>amee</DB_PSWD-->
                        <!--VALIDATION_QUERY>SELECT 1 FROM DUAL</VALIDATION_QUERY-->

                        <!-- RabbitMQ -->
                        <MESSAGING_RUN_SLEEP>30000</MESSAGING_RUN_SLEEP>
                        <RABBIT_MQ_ADDRESS>127.0.0.1</RABBIT_MQ_ADDRESS>
                        <RABBIT_MQ_PORT>5672</RABBIT_MQ_PORT>
                        <RABBIT_MQ_USERNAME>guest</RABBIT_MQ_USERNAME>
                        <RABBIT_MQ_PASSWORD>guest</RABBIT_MQ_PASSWORD>
                        <MESSAGING_SCOPE>live</MESSAGING_SCOPE>

                        <!-- AMEE platform -->
                        <AMEE_SERVER_NAME>localhost</AMEE_SERVER_NAME>
                        <AMEE_INSTANCE_NAME>test</AMEE_INSTANCE_NAME>
                        <HOST_NAME>localhost</HOST_NAME>
                        <PROTOCOL>http</PROTOCOL>
                        <PORT>8888</PORT>

                        <CONF_HOME>${basedir}/conf</CONF_HOME>
                        <AMEE_HOME>${basedir}</AMEE_HOME>
                        <CURRENT_HOME>${basedir}/current</CURRENT_HOME>
                        <AUTO_START_SCHEDULER>false</AUTO_START_SCHEDULER>
                        <CACHE_SERVICE_CLASS>com.amee.base.cache.EhCacheCacheService</CACHE_SERVICE_CLASS>
                        <CACHE_MANAGER_CLASS>org.springframework.cache.ehcache.EhCacheManagerFactoryBean
                        </CACHE_MANAGER_CLASS>
                        <MASTER_INDEX>false</MASTER_INDEX>
                    </environmentVariables>
                    <systemPropertyVariables>

                        <!-- Hibernate -->
                        <amee.cacheProviderClass>net.sf.ehcache.hibernate.SingletonEhCacheProvider
                        </amee.cacheProviderClass>
                        <amee.useQueryCache>false</amee.useQueryCache>
                        <amee.useSecondLevelCache>false</amee.useSecondLevelCache>
                        <amee.hibernateDialect>org.hibernate.dialect.HSQLDialect</amee.hibernateDialect>
                        <!--amee.hibernateDialect>org.hibernate.dialect.MySQLInnoDBDialect</amee.hibernateDialect-->

                        <!-- Set this to create to automatically create schema. Required for hsqldb:mem. -->
                        <hibernate.hbm2ddl.auto>create</hibernate.hbm2ddl.auto>

                        <log4j.configuration>test-log4j.xml</log4j.configuration>
                        <sun.lang.ClassLoader.allowArraySyntax>true</sun.lang.ClassLoader.allowArraySyntax>
                        <java.awt.headless>true</java.awt.headless>
                        <amee.logLevel>DEBUG</amee.logLevel>
                        <amee.defaultLogLevel>WARN</amee.defaultLogLevel>
                        <server.name>localhost</server.name>
                        <amee.keyFile>${basedir}/src/test/resources/crypto/amee.key</amee.keyFile>
                        <amee.saltFile>${basedir}/src/test/resources/crypto/amee.key</amee.saltFile>
                        <org.joda.time.DateTimeZone.Provider>org.joda.time.tz.UTCProvider
                        </org.joda.time.DateTimeZone.Provider>
                    </systemPropertyVariables>
                    <argLine>-javaagent:${basedir}/../target/dependency/spring-instrument-${spring.version}.jar
                    </argLine>
                    <additionalClasspathElements>
                        <element>${basedir}/src/main/resources</element>
                        <element>${basedir}/conf</element>
                    </additionalClasspathElements>
                </configuration>
                <executions>
                    <execution>
                        <id>integration-test</id>
                        <goals>
                            <goal>integration-test</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>verify</id>
                        <goals>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Groovy -->
            <plugin>
                <groupId>org.codehaus.groovy.maven</groupId>
                <artifactId>gmaven-plugin</artifactId>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <fileset>
                                    <directory>${basedir}/src/test/groovy</directory>
                                    <includes>
                                        <include>**/*.groovy</include>
                                    </includes>
                                </fileset>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>

        <!--testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <includes>
                    <include>test-log4j.xml</include>
                    <include>applicationContext.xml</include>
                </includes>
            </testResource>
        </testResources-->

    </build>

