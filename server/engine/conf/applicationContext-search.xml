<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="searchService" class="com.amee.platform.search.SearchService"/>

    <bean id="searchQueryService" class="com.amee.platform.search.SearchQueryService"/>

    <bean id="luceneService" class="com.amee.platform.search.LuceneServiceImpl">
        <property name="snapShooterPath" value="${CURRENT_HOME}/bin/snapshooter"/>
        <property name="indexDirPath" value="${AMEE_HOME}/lucene"/>
    </bean>

    <bean id="searchManager" class="com.amee.platform.search.SearchManager"/>

    <bean id="searchIndexerTaskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="1"/>
        <property name="maxPoolSize" value="8"/>
        <property name="queueCapacity" value="50"/>
        <property name="allowCoreThreadTimeOut" value="true"/>
        <property name="keepAliveSeconds" value="10"/>
    </bean>

</beans>