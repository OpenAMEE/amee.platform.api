<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:load-time-weaver/>
    <context:spring-configured/>

    <bean class="com.amee.service.ServiceData"/>

    <bean class="com.amee.service.auth.PermissionService"/>

    <bean id="permissionServiceDao" class="com.amee.service.auth.PermissionServiceDAOMock"/>

    <bean class="com.amee.service.auth.AuthorizationService"/>

    <bean class="com.amee.service.events.PublisherService"/>

    <bean class="com.amee.service.events.SubscriberService"/>

    <bean class="com.amee.service.locale.LocaleService"/>

    <bean id="localeServiceDAO" class="com.amee.service.locale.LocaleServiceDAOMock"/>

    <bean class="com.amee.service.metadata.MetadataService"/>

    <bean id="metadataServiceDAO" class="com.amee.service.metadata.MetadataServiceDAOMock"/>

    <bean class="com.amee.calculation.service.CalculationService"/>

    <bean id="ameeStatistics" class="com.amee.domain.AMEEStatistics"/>

    <bean id="searchQueryService" class="com.amee.platform.search.SearchQueryService"/>

    <bean id="luceneService" class="com.amee.platform.search.LuceneServiceMock"/>

    <bean id="dataItemServiceDAO" class="com.amee.service.item.DataItemServiceDAOMock"/>

    <bean class="com.amee.service.item.DataItemService"/>

</beans>